@model _19T1021067.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên cấp";
}
<div class="box box-primary">
    <div class="box-body">

        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Họ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div><div class="form-group">
                <label class="control-label col-sm-2" for="email">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate.ToString("dd-MM-yyyy")</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ảnh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Photo</p>
                    <img id="Photo"src="~/@Model.Photo"style="width:100px ;height:100px"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Xóa dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>

