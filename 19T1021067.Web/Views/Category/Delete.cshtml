@model _19T1021067.DomainModels.Categorie
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Miêu tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Xóa dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>

